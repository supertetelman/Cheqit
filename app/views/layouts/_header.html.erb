<% if signed_in? %>
	<ul><li><%= link_to "browse", users_path %></li>
		<li><%= link_to "profile", current_user %></li>
		<li><%= link_to "cheqs", cheqeds_user_path(current_user) %></li>
		<!--<li><%= link_to "settings", edit_user_path(current_user) %></li>-->
		<li><%= link_to "log out", signout_path, :method => :delete %></li>
		<li>
			<%= form_tag :controller => 'users', :action =>'search', :method => 'get' do %>
				<%= text_field_tag :search, params[:search], :id => 'search_field' %>
				<%= submit_tag "Search", :name => nil %>
				<%= link_to_function "Clear", "$('search_field').clear()" %>
			<% end %>
			<!--<input size="10" name="query" type="text" />-->
		</li>
		<input size="2" type='submit' value='Search' />
	</ul>
<% else %>
	<%= form_for(:session, :url => sessions_path) do |f| %>
		<%= f.text_field :email %>
		<%= f.password_field :password %>
		<%= f.submit "log in" %>
	<% end %>
<% end %>
